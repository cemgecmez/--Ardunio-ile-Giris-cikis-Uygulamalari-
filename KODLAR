                int buton8durumu = digitalRead(buton8);



if (buton1durumu, HIGH) {
  delay(500);
  buton1sayac++;
}
  else if (buton1sayac == 3)
  {
    buton1sayac = 0;
    digitalWrite(led1, HIGH);
