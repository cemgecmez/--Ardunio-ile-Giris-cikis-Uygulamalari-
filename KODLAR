int buton6 = A2;
int buton7 = A3;
int buton8 = A4;
int buzzer = A0;

void setup() 
{
pinMode(buton1, INPUT);
pinMode(buton2, INPUT);
pinMode(buton3, INPUT);
pinMode(buton4, INPUT);
pinMode(buton5, INPUT);
pinMode(buton6, INPUT);
pinMode(buton7, INPUT);
pinMode(buton8, INPUT);
pinMode(led1, OUTPUT);
pinMode(led2, OUTPUT);
pinMode(led3, OUTPUT);
pinMode(led4, OUTPUT);
pinMode(led5, OUTPUT);
pinMode(led6, OUTPUT);
pinMode(led7, OUTPUT);
pinMode(led8, OUTPUT);
pinMode(buzzer, OUTPUT);

}

void loop(){
  int buton1durumu = digitalRead(buton1);
    int buton2durumu = digitalRead(buton2);
      int buton3durumu = digitalRead(buton3);
        int buton4durumu = digitalRead(buton4);
          int buton5durumu = digitalRead(buton5);
            int buton6durumu = digitalRead(buton6);
